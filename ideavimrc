let mapleader=" "

set showmode
set showcmd
set ideastatusicon='gray'
let g:EasyMotion_override_acejump = 0

" repmap ; to ;
nnoremap ; :
" Plugins
set commentary
set easymotion
set NERDTree
set multiple-cursors

set ignorecase
set smartcase

" Copy to system clipboard as well
set clipboard+=unnamed

" Use Idea to join lines smartly
set ideajoin
" Use Idea bookmarks
set ideamarks

" highlight search matches
:set hlsearch

" These create newlines like o and O but stay in normal mode
nmap zj o<Esc>k
nmap zk O<Esc>j

" key bindings for quickly moving between windows
" h left, l right, k up, j down
nmap <leader>h <c-w>h
nmap <leader>l <c-w>l
nmap <leader>k <c-w>k
nmap <leader>j <c-w>j

" Navigation
nmap <leader>g :action GotoDeclaration<cr>
nmap gi :action GotoImplementation<CR>
nmap <leader>L :action RecentLocations<cr>
nmap <leader>[ :action Back<cr>
nmap <leader>] :action Forward<cr>


" Closing tabs
nmap <leader>q :action CloseContent<cr>
nmap <leader>Q :action ReopenClosedTab<cr>

" Search
" nmap <leader>/ :action Find<cr>
" nmap <leader>/  :action CommentByLineComment<cr>
nmap <leader>f :action FindInPath<cr>
nmap <leader>p :action FileStructurePopup<cr>
nmap <leader>t :action GotoFile<cr>
nmap <leader>o :action GotoClass<cr>
nmap <leader>\ :action SearchEverywhere<cr>
nmap <leader><tab> :action Switcher<cr>
nmap <leader><e> :action RecentChangedFiles<cr>
nmap <leader><a> :action GotoAction<cr>
" Map \r to the Reformat Code action
:map <leader> <Action>(ReformatCode)
" Split
nnoremap <leader>- :split<CR>
nnoremap <leader>\| :vsplit<CR>
nmap <leader>T :action ActivateTerminalToolWindow<cr>

set laststatus=2
nnoremap <leader>h :nohlsearch<CR>

" code refactoring
nnoremap <leader>r :action RenameElement<cr>

" Nerdtree
nnoremap <leader>n :NERDTreeToggle<cr>

" Remap multiple-cursors shortcuts to match terryma/vim-multiple-cursors
nmap <C-n> <Plug>NextWholeOccurrence
xmap <C-n> <Plug>NextWholeOccurrence
nmap g<C-n> <Plug>NextOccurrence
xmap g<C-n> <Plug>NextOccurrence
nmap <C-x> <Plug>SkipOccurrence
xmap <C-x> <Plug>SkipOccurrence
nmap <C-p> <Plug>RemoveOccurrence
xmap <C-p> <Plug>RemoveOccurrence
" Note that the default <A-n> and g<A-n> shortcuts don't work on Mac due to dead keys.
" <A-n> is used to enter accented text e.g. Ã±
nmap <S-C-n> <Plug>AllWholeOccurrences
xmap <S-C-n> <Plug>AllWholeOccurrences
nmap g<S-C-n> <Plug>AllOccurrences
xmap g<S-C-n> <Plug>AllOccurrences
